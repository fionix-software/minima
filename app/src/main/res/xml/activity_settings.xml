        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            app:key="preference_theme"
            app:summary="Select them for Minima"
            app:title="Theme" />

        <androidx.preference.Preference
            app:iconSpaceReserved="false"
            app:key="preference_clear"
